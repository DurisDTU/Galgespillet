<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:background="@android:color/"

    <RelativeLayout
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Start_spillet">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Galge Spillet"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView"
                tools:text="Galge Spillet"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAllCaps="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="25dp">

                <Button
                    android:text="Start Spillet"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:id="@+id/Startspillet"
                    android:layout_weight="1"
                    android:onClick="startSpil"
                    style="@style/Widget.AppCompat.Button" />

                <Button
                    android:text="Tilføj Ord"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:onClick="tilfoejOrd"
                    android:layout_marginTop="20dp" />

                <Button
                    android:text="Hjælp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:text="Highscore"
                    android:layout_width="250dp"
                    android:id="@+id/textView2"
                    android:layout_height="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forkert6"
                android:id="@+id/imageView"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
